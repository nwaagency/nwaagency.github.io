---
// SECTION 3.4: The Casino Card (Row & Detail)
// Implements Atomic Design and Hybrid Rendering logic

export interface Props {
  data: any; // Typed via Zod in real impl
  index: number;
}

const { data, index } = Astro.props;
const {
  name,
  logo_url,
  rank,
  rating,
  welcome_bonus_headline,
  payout_speed,
  rtp,
  affiliate_url,
  banking,
  vip_high_roller,
} = data;

// Generate Rank Badge Color
const getRankColor = (r) => {
  if (r === 1) return 'bg-[#FFD700] text-black shadow-[0_0_10px_#FFD700]';
  if (r === 2) return 'bg-[#C0C0C0] text-black';
  if (r === 3) return 'bg-[#CD7F32] text-black';
  return 'bg-[#333] text-white';
};

// Calculate Star Rating
const fullStars = Math.floor(rating);
const hasHalf = rating % 1 !== 0;
---

<article 
  class="casino-card animate-entrance" 
  style={`--index: ${index};`} 
  id={`casino-${rank}`}
>
  <!-- STATE A: MAIN ROW -->
  <div class="card-row">
    
    <!-- 1. Rank & Identity -->
    <div class="col-identity">
      <div class={`rank-badge ${getRankColor(rank)}`}>
        #{rank}
      </div>
      <div class="logo-wrapper">
        <img src={logo_url} alt={`${name} logo`} loading="lazy" width="80" height="80" />
      </div>
      <div class="name-mobile">{name}</div>
    </div>

    <!-- 2. Rating & Trust -->
    <div class="col-rating">
      <div class="stars" aria-label={`Rating: ${rating} out of 5`}>
        {Array.from({ length: 5 }).map((_, i) => (
          <span class={`star-icon ${i < rating ? 'text-gold' : 'text-gray-700'}`}>
            ★
          </span>
        ))}
      </div>
      <span class="score-text">{rating.toFixed(1)} / 5.0</span>
      <div class="trust-badges">
        <span class="badge-mini">RTP {rtp}%</span>
        {vip_high_roller && <span class="badge-mini badge-vip">VIP</span>}
      </div>
    </div>

    <!-- 3. Bonus Info -->
    <div class="col-bonus">
      <span class="bonus-label">Welcome Package</span>
      <h3 class="bonus-text" set:html={welcome_bonus_headline}></h3>
      <div class="mobile-terms">18+ | T&C Apply</div>
    </div>

    <!-- 4. Payments (Desktop Only) -->
    <div class="col-payments desktop-only">
      <div class="payment-grid">
        {banking.slice(0, 4).map((method) => (
          <span class="pay-tag">{method.method}</span>
        ))}
        {banking.length > 4 && <span class="pay-more">+{banking.length - 4}</span>}
      </div>
      <div class="speed-info">
        <span>⚡ Payouts: {payout_speed}</span>
      </div>
    </div>

    <!-- 5. Actions -->
    <div class="col-actions">
      <a href={affiliate_url} target="_blank" rel="nofollow noopener" class="btn-primary">
        Play Now
      </a>
      <button class="btn-toggle-details" aria-expanded="false" onclick={`toggleDetails('${rank}')`}>
        <span>Details</span>
        <svg class="chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- STATE B: DETAILS PANEL -->
  <div id={`details-${rank}`} class="details-panel" aria-hidden="true">
    <div class="details-grid">
      <div class="detail-col">
        <h4>Banking Options</h4>
        <div class="tag-cloud">
          {banking.map((m) => <span class="tag">{m.method}</span>)}
        </div>
      </div>
      <div class="detail-col">
        <h4>Terms & Limits</h4>
        <ul>
          <li><strong>Min Deposit:</strong> {data.min_deposit}</li>
          <li><strong>License:</strong> {data.license}</li>
          <li><strong>Withdrawal Speed:</strong> {payout_speed}</li>
        </ul>
      </div>
      <div class="detail-col full-mobile">
        <h4>Why we like {name}</h4>
        <p class="summary-text">Trusted by thousands of players. Secure payments and high withdrawal limits.</p>
        <div class="small-print">
          Please gamble responsibly. 18+.
        </div>
      </div>
    </div>
  </div>
</article>

<script is:inline>
  // Simple Vanilla JS for the toggle (No Framework Overhead)
  function toggleDetails(id) {
    const panel = document.getElementById(`details-${id}`);
    const card = document.getElementById(`casino-${id}`);
    const isHidden = panel.getAttribute('aria-hidden') === 'true';
    
    panel.setAttribute('aria-hidden', !isHidden);
    panel.style.maxHeight = isHidden ? '500px' : '0';
    card.classList.toggle('expanded');
  }
</script>

<style>
  /* SECTION 7: Responsive & Adaptive Behavior 
     Implements Desktop vs Mobile Dichotomy
  */

  .casino-card {
    background: var(--bg-card);
    border: 1px solid rgba(255,255,255,0.05);
    border-radius: var(--radius-md);
    margin-bottom: 1rem;
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
  }

  .casino-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.5);
    border-color: rgba(212, 175, 55, 0.3); /* Gold hint on hover */
  }

  /* Desktop Layout */
  .card-row {
    display: grid;
    /* Rank | Identity | Rating | Bonus | Payments | Actions */
    grid-template-columns: 60px 140px 140px 1fr 140px 160px;
    align-items: center;
    padding: 1rem;
    gap: 1rem;
  }

  /* Identity */
  .col-identity {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
  }

  .rank-badge {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
  }

  .logo-wrapper img {
    border-radius: 8px;
    object-fit: cover;
  }

  .name-mobile { display: none; }

  /* Rating */
  .col-rating { text-align: center; }
  .stars { font-size: 1.1rem; letter-spacing: 2px; }
  .score-text { display: block; font-size: 0.8rem; color: var(--text-secondary); margin-top: 4px; }
  .badge-vip { background: var(--gold-muted); color: white; padding: 2px 6px; border-radius: 4px; font-size: 0.7rem; }

  /* Bonus */
  .col-bonus { text-align: center; padding: 0 1rem; border-left: 1px solid rgba(255,255,255,0.1); border-right: 1px solid rgba(255,255,255,0.1); }
  .bonus-label { text-transform: uppercase; font-size: 0.7rem; color: var(--text-muted); letter-spacing: 1px; }
  .bonus-text { font-size: 1.2rem; font-weight: 700; color: var(--text-primary); margin: 4px 0; }
  .mobile-terms { display: none; }

  /* Payments */
  .payment-grid { display: flex; flex-wrap: wrap; gap: 4px; justify-content: center; }
  .pay-tag { font-size: 0.7rem; background: #2a2a2a; padding: 2px 4px; border-radius: 3px; color: #ccc; }
  .speed-info { font-size: 0.7rem; color: var(--green-success); margin-top: 6px; text-align: center; }

  /* Actions */
  .col-actions { display: flex; flex-direction: column; gap: 0.5rem; }
  .btn-toggle-details {
    background: transparent;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    font-size: 0.8rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
  }
  .btn-toggle-details:hover { color: white; }

  /* Details Panel */
  .details-panel {
    max-height: 0;
    overflow: hidden;
    background: var(--bg-panel);
    transition: max-height 0.4s ease-in-out;
  }
  
  .details-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;
    padding: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.05);
  }

  .details-grid h4 { color: var(--gold-metallic); font-size: 0.9rem; margin-bottom: 0.5rem; text-transform: uppercase; }
  .details-grid ul { list-style: none; font-size: 0.85rem; color: var(--text-secondary); }
  .details-grid li { margin-bottom: 4px; }
  .tag { display: inline-block; background: #222; padding: 4px 8px; margin: 2px; border-radius: 4px; font-size: 0.75rem; }

  /* MOBILE BREAKPOINT (< 768px) 
     Switch to Stacked Card Layout
  */
  @media (max-width: 768px) {
    .card-row {
      display: grid;
      grid-template-columns: 1fr 1fr; /* 2 Column Header */
      grid-template-areas: 
        "rank rating"
        "bonus bonus"
        "actions actions";
      padding: 1rem;
      gap: 0.8rem;
    }

    .desktop-only { display: none; }
    
    /* Area 1: Top Left (Rank + Name) */
    .col-identity {
      grid-area: rank;
      flex-direction: row;
      align-items: center;
      gap: 10px;
      justify-content: flex-start;
    }
    .logo-wrapper { width: 50px; height: 50px; }
    .logo-wrapper img { width: 50px; height: 50px; }
    .name-mobile { display: block; font-weight: 700; font-size: 1.1rem; }
    .rank-badge { position: absolute; top: -10px; left: -10px; width: 24px; height: 24px; font-size: 0.75rem; }

    /* Area 2: Top Right (Rating) */
    .col-rating {
      grid-area: rating;
      align-items: flex-end;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    
    /* Area 3: Middle (Bonus - Full Width) */
    .col-bonus {
      grid-area: bonus;
      background: rgba(255,255,255,0.03);
      border: 1px dashed rgba(255,255,255,0.1);
      border-radius: 6px;
      padding: 0.8rem;
      margin: 0.5rem 0;
    }
    .mobile-terms { display: block; font-size: 0.6rem; color: #555; margin-top: 4px; }

    /* Area 4: Bottom (Actions - Full Width) */
    .col-actions {
      grid-area: actions;
      flex-direction: row;
    }
    .btn-primary { flex: 1; text-align: center; }
    .btn-toggle-details { flex: 0 0 80px; border-left: 1px solid #333; }

    /* Details Mobile */
    .details-grid { grid-template-columns: 1fr; gap: 1rem; }
  }
</style>